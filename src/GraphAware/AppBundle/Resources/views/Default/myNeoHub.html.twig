{% block js %}
    <script type="text/javascript">
        $(document).ready(function(){
            var ghiMax = $('.userProfile').width();
            var ghiL = (ghiMax - 100) / 2;
            var img = $('img.ghimg');
            $('img.ghimg').css('left', ghiL);
        });

        $('.leftmenu > li').click(function(e){
            var elt = e.target.closest('li');
            $('.leftmenu > li.active').removeClass('active');
            $(elt).addClass('active');
        });

        var lmW = $('#left-menu').width();
        $('#right-box').css('margin-left', lmW+75);
        prettyPrint();

        $('#grafikon-statistic-unique-id').grafikon({
            width: 250,
            height: 160,
            mode: "doughnut",
            doughnut: {
                click: true,
                separator: true,
                separatorColor: "#FEFEFD",
                statisticId: "grafikon-statistic-unique-id",
                holeSize: 5
            }
        });
    </script>

